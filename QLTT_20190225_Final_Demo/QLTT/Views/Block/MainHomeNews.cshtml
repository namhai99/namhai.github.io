@foreach (var item in ListModulesFrontPanel)
{
    if (item.ModulesFrontPanel_Panel == "Main" && (item.ModulesFrontPanel_Url == "MainHomeNews.cshtml" || item.ModulesFrontPanel_Url == "MainHomeNews.ascx") && item.ModulesFrontPanel_Url != "MainHomeSlider.cshtml")
    {
        <!-- ARTICLES V2 WIDGET -->
        <section class="widget articles-v2">
            <header class="clearfix">
                <h4>@item.ModulesFrontPanel_Title</h4>
                <a href="/News/NewsIndex?GroupCate=@item.ModulesFrontPanel_Value" class="control"><i class="fa fa-plus"></i></a>
            </header>

            <div class="content row">
                @foreach (var itemNews in lstNews)
                {
                    if (itemNews.GroupCate.ToString() == item.ModulesFrontPanel_Value.ToString())
                    {
                        if (itemNews.rn == 1)
                        {
                            //Tin hot
                            <div class="col-sm-6 article-medium">
                                <div class="frame">
                                    <a class="image" href="#">
                                        <figure class="image-holder">
                                            <img src="@itemNews.ImageThumb" alt="@itemNews.Title">
                                        </figure>
                                        <div class="image-light"></div>
                                        <span class="dashicons dashicons-format-quote"></span>
                                    </a>
                                </div>

                                <h4><a href="#">@itemNews.Title</a></h4>
                                <p class="post-meta">
                                    <a href="#"><span class="fa fa-clock-o"></span> @itemNews.ApprovalDate</a> &nbsp;
                                    <a href="#"><span class="fa fa-comments"></span> @itemNews.CommentTotal</a> &nbsp;
                                    <a href="#"><span class="fa fa-eye"></span> 654 lượt xem</a>
                                </p>

                                <p>
                                    @Html.Raw(itemNews.ShortDescribe)&hellip;
                                </p>
                                <hr>
                            </div>
                        }
                    }
                }

                <div class="paragraph-row">
                    @foreach (var itemNews in lstNews)
                    {
                        if (itemNews.GroupCate.ToString() == item.ModulesFrontPanel_Value.ToString())
                        {
                            if (itemNews.rn != 1)
                            {
                                <div class="col-sm-6 article-tiny">
                                    <a href="#" class="image">
                                        <figure class="image-holder">
                                            <img src="@itemNews.ImageThumb" alt="@itemNews.Title">
                                        </figure>
                                        <div class="image-light"></div>
                                        <span class="dashicons dashicons-format-link"></span>
                                    </a>

                                    <h5><a href="#">@itemNews.Title</a></h5>
                                    <p class="post-meta">
                                        <a href="#"><span class="fa fa-clock-o"></span> @itemNews.ApprovalDate</a> &nbsp;
                                        <a href="#"><span class="fa fa-comments"></span> @itemNews.CommentTotal</a> &nbsp;
                                        <a href="#"><span class="fa fa-eye"></span> 9,948</a>
                                    </p>
                                    <hr>
                                </div>
                            }
                        }
                    }
                </div>
            </div><!--.content-->
        </section><!--.widget-->
    }
}

